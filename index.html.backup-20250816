    <script>
        // Smooth scrolling para los enlaces de navegación
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Animación de aparición para las tarjetas de servicio
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.service-card, .achievement-card').forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(50px)';
            card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(card);
        });

        // Contador animado para métricas
        function animateCounter(element, target) {
            let current = 0;
            const increment = target / 100;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    element.textContent = target.toString().includes('%') ? target : target.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
                    clearInterval(timer);
                } else {
                    element.textContent = Math.floor(current).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
                }
            }, 20);
        }

        // Observar métricas para animación
        const metricsObserver = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const valueElement = entry.target.querySelector('.metric-value');
                    const value = valueElement.textContent;
                    if (!valueElement.dataset.animated) {
                        valueElement.dataset.animated = 'true';
                        if (value.includes('%')) {
                            animateCounter(valueElement, parseFloat(value));
                        } else if (value.includes('+')) {
                            animateCounter(valueElement, parseInt(value));
                        } else if (value.includes('ms')) {
                            animateCounter(valueElement, parseInt(value));
                        } else {
                            animateCounter(valueElement, parseInt(value));
                        }
                    }
                }
            });
        }, { threshold: 0.5 });

        document.querySelectorAll('.metric').forEach(metric => {
            metricsObserver.observe(metric);
        });
    </script>
